			<label text="f180" />
		</fhrs>
		<buttons name="Buttons">
			<object name="LOW_X_FILLED" label="LowX (filled)" className="Symbol" />
			<object name="FILLED_HIGH_PRESSURE_H" label="High Presure H(filled)"
				className="Symbol" />
			<object name="TROPICAL_STORM_NH" label="Tropical Storm (Northern Hemisphere)"
